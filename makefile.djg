all: $(TARGET)

.c.o:
	$(CC) $(COPT) $(CFLAGS) $(CDEFS) -c $<

$(TARGET): $(objs)
	$(CC) $(COPT) $(LFLAGS) -o $(TARGET) $(objs) $(MSGAPI)

clean:
	-del *.o
	-del *~

distclean: clean
	-del $(TARGET)

